package ex01;

import java.util.ArrayList;
import java.util.HashMap;

public class Pedido {
	
	private static ArrayList<Pedido> pedidos = new ArrayList<>();
	
	public static void addPedido(Pedido p) {
		pedidos.add(p);
	}
	
	public static ArrayList<Pedido> getPedidos() {
		return pedidos;
	}
	
	private HashMap<Produto, Integer> produtos;

	public Pedido() {
		super();
		this.produtos = new HashMap();
	}

	public HashMap<Produto, Integer> getProdutos() {
		return produtos;
	}
	
	public void addProduto(Produto p, Integer quantidade) {
		this.produtos.put(p, quantidade);
	}
	
}
